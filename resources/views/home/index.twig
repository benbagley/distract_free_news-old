{% extends 'app.twig' %}

{% block content %}
  <section class="loading" v-if="loading">
    One Moment
  </section>

  <section class="item" v-for="item in items" v-else>
    <img :src="item.image">

    <h3 class="item__title">
      <a :href="item.link" target="_blank">
        <h3>${ item.title }</h3>
      </a>
    </h3>

    <section class="item__service">
        <p>
          Source: ${ item.service }
          {% if item.author %}
            | Author: ${ item.author }
          {% endif %}
        </p>
    </section>

    <section class="item__content">
      <p>${ item.content }</p>
    </section>
  </section>
{% endblock %}
